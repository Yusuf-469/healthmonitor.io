{
  "version": 2,
  "builds": [
    {
      "src": "frontend/**",
      "use": "@vercel/static"
    }
  ],
  "routes": [
    {
      "src": "/",
      "dest": "/frontend/index.html"
    },
    {
      "src": "/dashboard.html",
      "dest": "/frontend/dashboard.html"
    },
    {
      "src": "/patients.html",
      "dest": "/frontend/patients.html"
    },
    {
      "src": "/alerts.html",
      "dest": "/frontend/alerts.html"
    },
    {
      "src": "/devices.html",
      "dest": "/frontend/devices.html"
    },
    {
      "src": "/analytics.html",
      "dest": "/frontend/analytics.html"
    },
    {
      "src": "/settings.html",
      "dest": "/frontend/settings.html"
    },
    {
      "src": "/login.html",
      "dest": "/frontend/login.html"
    },
    {
      "src": "/signup.html",
      "dest": "/frontend/signup.html"
    },
    {
      "src": "/css/(.*)",
      "dest": "/frontend/css/$1"
    },
    {
      "src": "/js/(.*)",
      "dest": "/frontend/js/$1"
    }
  ]
}
