# Server Configuration
NODE_ENV=development
PORT=5000

# PostgreSQL Database (Neon or Railway PostgreSQL)
# Get this from your Neon dashboard or Railway PostgreSQL service
DATABASE_URL=postgres://username:password@ep-xyz.us-east-1.aws.neon.tech/medical_iot?sslmode=require
NEON_DATABASE_URL=postgres://username:password@ep-xyz.us-east-1.aws.neon.tech/medical_iot?sslmode=require

# JWT Authentication
JWT_SECRET=your-super-secret-jwt-key-change-in-production
JWT_EXPIRES_IN=7d

# Rate Limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# Frontend URL (for CORS)
FRONTEND_URL=http://localhost:3000

# Railway Environment (auto-set by Railway)
# RAILWAY_ENVIRONMENT=true
# RAILWAY_STATIC_URL=your-app.railway.app
