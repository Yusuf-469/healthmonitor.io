{
  "$schema": "https://railway.app/schema.json",
  "build": {
    "builder": "NIXPACKS",
    "buildCommand": "rm -rf node_modules package-lock.json && npm install --no-audit --no-fund",
    "installCommand": "npm install --production --no-audit --no-fund"
  },
  "deploy": {
    "startCommand": "npm start",
    "restartPolicy": "always",
    "healthcheckPath": "/health",
    "healthcheckTimeout": 60,
    "healthcheckInterval": 30,
    "timeout": 180
  },
  "env": {
    "NODE_ENV": "production"
  }
}
